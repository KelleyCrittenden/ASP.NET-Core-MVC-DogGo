@model DogGo.Models.ViewModels.WalkerProfileViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Walker Profile</h1>

<div>

    <hr />
    <dl class="row">

        <section class="container">
            <img style="width:100px;float:left;margin-right:20px"
                 src="@Model.Walker.ImageUrl" alt="avatar" />
            <div>
                <label class="font-weight-bold">Name:</label>
                <span>@Model.Walker.Name</span>
            </div>
            <div>
                <label class="font-weight-bold">Neighborhood:</label>
                <span>@Model.Walker.NeighborhoodId</span>
            </div>
        </section>

        <hr class="mt-5" />
        <div class="clearfix"></div>

    </dl>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Recent Walks</h1>

            <div class="row">
                @foreach (Walk walk in Model.Walks)
                {
                    <div class="card m-4" style="width: 18rem;">
                        <div class="card-body">
                            <div>
                                <label class="font-weight-bold">Date:</label>
                                <span>@walk.Date</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Client:</label>
                                <span>@walk.DogId</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Duration:</label>
                                <p>@walk.Duration</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <section class="col-lg-4 col-md-8 container mt-5">
            <h1>Total Walk Time:</h1>
            
        </section>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
